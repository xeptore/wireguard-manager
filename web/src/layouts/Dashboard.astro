---
import BaseLayout from "./BaseLayout.astro";
import Wireguard from "../components/Wireguard.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<BaseLayout title={title} classes={["flex"]}>
  <aside class="hidden lg:flex lg:w-1/4 xl:w-1/5 2xl:w-1/6 lg:p-2 h-screen">
    <div class="rounded-lg flex-1 flex flex-col overflow-hidden bg-gray-900">
      <div
        class="flex flex-row h-14 items-center justify-between bg-gray-900 border-b-2 border-b-gray-700"
      >
        <div class="mx-auto w-2/3">
          <Wireguard />
        </div>
      </div>
      <div class="flex-1 overflow-y-auto overflow-x-hidden">
        <ul>
          <li class="hover:bg-gray-700 duration-150">
            <a class="flex cursor-pointer py-3" href="/">
              <span
                class="inline-flex justify-center items-center w-16 h-6 flex-none font-bold"
              >
                <i class="fa-solid fa-users"></i>
              </span>
              <span class="grow text-ellipsis line-clamp-1 pr-12 font-medium">
                Clients
              </span>
            </a>
          </li>
        </ul>
      </div>
      <ul>
        <li>
          <button
            role="button"
            type="button"
            class="items-center rounded-br-lg rounded-bl-lg ring-inset w-full cursor-pointer py-3 hover:transition-all duration-200 hover:ring-1 ring-wireguard-500 bg-wireguard-700 hover:bg-wireguard-600"
          >
            <span class="inline-flex justify-center items-center h-6">
              <i class="fa-solid fa-right-from-bracket mr-2"></i>
            </span>
            <span class="text-ellipsis">Logout</span>
          </button>
        </li>
      </ul>
    </div>
  </aside>
  <div class="lg:w-3/4 xl:w-4/5 2xl:w-5/6">
    <nav class="h-16 pr-2 mb-4 z-30 transition-position">
      <div
        class="h-full justify-end flex lg:items-stretch border-b-gray-700 border-b-2"
      >
        <div
          class="hidden overflow-y-auto lg:overflow-visible lg:w-auto lg:flex lg:static"
        >
          <div
            class="block lg:flex items-center relative cursor-pointer text-white hover:text-gray-400 lg:px-3"
          >
            <div class="flex items-center lg:bg-transparent p-3 lg:p-0">
              <div
                class="h-10 w-10 border-2 hover:border-indigo-300 rounded-md overflow-hidden inline-flex"
              >
                <img
                  src="https://api.dicebear.com/5.x/big-ears-neutral/svg?seed=Whiskers"
                  alt="avatar"
                  class="block h-auto w-full max-w-full"
                />
              </div>
              <span class="px-2 transition-colors">John Doe</span>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <slot />
  </div>
</BaseLayout>
