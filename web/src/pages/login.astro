---
import Layout from "../layouts/Layout.astro";
// import Card from '../components/Card.astro';
// import Figure from "../components/Figure.astro";
---

<Layout title="Login">
  <div class="dark">
    <div class="bg-gray-50 dark:bg-slate-800 dark:text-slate-100">
      <div class="flex min-h-screen items-center justify-center bg-gradient-to-tr from-slate-700 via-slate-900 to-slate-800">
        <div
          class="bg-white flex w-11/12 md:w-7/12 lg:w-6/12 xl:w-4/12 shadow-2xl rounded-2xl flex-col dark:bg-slate-900/70"
        >
          <div class="flex-1 p-6">
            <form action="#">
              <div class="mb-6 last:mb-0">
                <label class="block font-bold mb-2">Login</label><div class="">
                  <div class="relative">
                    <input
                      name="login"
                      class="px-3 py-2 max-w-full border-gray-700 rounded w-full dark:placeholder-gray-400 focus:ring focus:ring-blue-600 focus:border-blue-600 focus:outline-none h-12 border bg-white dark:bg-slate-800"
                      value="john.doe"
                    />
                  </div>
                </div><div class="text-xs text-gray-500 dark:text-slate-400 mt-1">
                  Please enter your login
                </div>
              </div><div class="mb-6 last:mb-0">
                <label class="block font-bold mb-2">Password</label><div class="">
                  <div class="relative">
                    <input
                      name="password"
                      type="password"
                      class="px-3 py-2 max-w-full border-gray-700 rounded w-full dark:placeholder-gray-400 focus:ring focus:ring-blue-600 focus:border-blue-600 focus:outline-none h-12 border bg-white dark:bg-slate-800"
                      value="bG1sL9eQ1uD2sK3b"
                    />
                  </div>
                </div><div class="text-xs text-gray-500 dark:text-slate-400 mt-1">
                  Please enter your password
                </div>
              </div><label class="checkbox undefined"
                ><input
                  name="remember"
                  type="checkbox"
                  value="true"
                  checked=""
                /><span class="check"></span><span class="pl-2">Remember</span
                ></label
              ><hr
                class="my-6 -mx-6 dark:border-slate-800 border-t border-gray-100"
              /><div
                class="flex items-center justify-start undefined -mb-3 flex-wrap"
              >
                <button
                  class="inline-flex justify-center items-center whitespace-nowrap focus:outline-none transition-colors focus:ring duration-150 border cursor-pointer rounded border-blue-600 dark:border-blue-500 ring-blue-300 dark:ring-blue-700 bg-blue-600 dark:bg-blue-500 text-white hover:bg-blue-700 hover:border-blue-700 hover:dark:bg-blue-600 hover:dark:border-blue-600 mr-3 last:mr-0 mb-3 undefined py-2 px-3"
                  type="submit"><span class="px-2">Login</span></button
                ><a
                  class="inline-flex justify-center items-center whitespace-nowrap focus:outline-none transition-colors focus:ring duration-150 border cursor-pointer rounded border-blue-600 dark:border-blue-500 ring-blue-300 dark:ring-blue-700 text-blue-600 dark:text-blue-500 hover:bg-blue-600 hover:text-white hover:dark:text-white hover:dark:border-blue-600 mr-3 last:mr-0 mb-3 undefined py-2 px-3"
                  href="/admin-one-react-tailwind/dashboard"
                  ><span class="px-2">Home</span></a
                >
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
